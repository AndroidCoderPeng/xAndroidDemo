<resources>

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/mainColor</item>
    </style>

    <style name="PopupAnimation">
        <!-- 指定显示的动画xml -->
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <!-- 指定消失的动画xml -->
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="ActivityInOutAnimation" parent="Base.Theme.NoActionBar">
        <!--进入-->
        <item name="android:activityOpenEnterAnimation">@anim/activity_in</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_out</item>

        <!--退出-->
        <item name="android:activityCloseEnterAnimation">@anim/activity_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_out</item>
    </style>

    <style name="UserDefinedRadioButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:textColor">@drawable/selector_text_color</item>
        <item name="android:background">@drawable/selector_radio_button</item>
    </style>
</resources>
