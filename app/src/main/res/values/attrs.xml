<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyProgressBar">
        <!--进度条底色-->
        <attr name="progress_backgroundColor" format="color" />
        <!--进度条开始前景色-->
        <attr name="progress_startColor" format="color" />
        <!--进度条结束前景色-->
        <attr name="progress_endColor" format="color" />
        <!--字体颜色-->
        <attr name="progress_textColor" format="color" />
        <!--文字-->
        <attr name="progress_text" format="string" />
    </declare-styleable>


    <declare-styleable name="WaterRippleView">
        <!--中心圆颜色-->
        <attr name="ripple_centerColor" format="color" />
        <!--扩散圆颜色-->
        <attr name="ripple_spreadColor" format="color" />
        <!--扩散延迟间隔-->
        <attr name="ripple_animDuration" format="integer" />
        <!--中心圆半径-->
        <attr name="ripple_radius" format="dimension" />
        <!--扩散间距，值越大，扩散速度越快-->
        <attr name="ripple_distance" format="dimension" />
        <!--扩散最大半径，值越小，扩散效果越明显-->
        <attr name="ripple_maxDistance" format="dimension" />
        <!--文字大小-->
        <attr name="ripple_textSize" format="dimension" />
        <!--文字-->
        <attr name="ripple_text" format="string" />
        <!--文字颜色-->
        <attr name="ripple_textColor" format="color" />
        <!--图片资源-->
        <attr name="ripple_image" format="reference" />
    </declare-styleable>

    <declare-styleable name="CheckView">
        <!--中心圆颜色-->
        <attr name="view_centerColor" format="color" />
        <!--中心圆颜色-->
        <attr name="view_ringColor" format="color" />
        <!--中心圆半径-->
        <attr name="view_radius" format="dimension" />
        <!--文字大小-->
        <attr name="view_textSize" format="dimension" />
        <!--文字-->
        <attr name="view_text" format="string" />
        <!--文字颜色-->
        <attr name="view_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RadarView">
        <!--雷达线颜色-->
        <attr name="radar_lineColor" format="color" />
        <!--中心圆半径-->
        <attr name="radar_radius" format="dimension" />
        <!--圆环间距-->
        <attr name="radar_distance" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SlideBarView">
        <attr name="slide_textSize" format="dimension" />
        <attr name="slide_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="AirDashBoardView">
        <attr name="air_valueColor" format="color" />
        <attr name="air_valueSize" format="dimension" />
        <attr name="air_current_valueColor" format="color" />
        <attr name="air_current_valueSize" format="dimension" />
        <attr name="air_top_text" format="string" />
        <attr name="air_top_textSize" format="dimension" />
        <attr name="air_top_textColor" format="color" />
        <attr name="air_center_textSize" format="dimension" />
        <attr name="air_center_textColor" format="color" />
        <attr name="air_ring_background" format="color" />
        <attr name="air_ring_foreground" format="color" />
        <attr name="air_ring_width" format="dimension" />
        <attr name="air_ring_radius" format="dimension" />
    </declare-styleable>
</resources>