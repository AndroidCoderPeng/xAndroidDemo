<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EasyProgressBar">
        <!--进度条底色-->
        <attr name="progress_backgroundColor" format="color" />
        <!--进度条开始前景色-->
        <attr name="progress_startColor" format="color" />
        <!--进度条结束前景色-->
        <attr name="progress_endColor" format="color" />
        <!--字体颜色-->
        <attr name="progress_textColor" format="color" />
        <!--文字-->
        <attr name="progress_text" format="string" />
    </declare-styleable>

    <declare-styleable name="SlideBarView">
        <attr name="slide_textSize" format="dimension" />
        <attr name="slide_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SteeringWheelView">
        <!--方向盘外边框颜色-->
        <attr name="ctrl_diameter" format="dimension" />
        <!--方向盘外边框颜色-->
        <attr name="ctrl_borderColor" format="color" />
        <!--方向盘外边框粗细-->
        <attr name="ctrl_borderStroke" format="dimension" />
        <!--中间开关颜色-->
        <attr name="ctrl_switchColor" format="color" />
        <!--四个方位小点颜色-->
        <attr name="ctrl_directionColor" format="color" />
        <!--四个方位小点直径-->
        <attr name="ctrl_directionDiameter" format="dimension" />
    </declare-styleable>
</resources>