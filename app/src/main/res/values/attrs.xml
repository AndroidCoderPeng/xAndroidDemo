<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideBarView">
        <attr name="slide_width" format="dimension" />
        <attr name="slide_textSize" format="dimension" />
        <attr name="slide_textColor" format="color" />
    </declare-styleable>

    <declare-styleable name="RadarScanView">
        <!-- 雷达图半径 -->
        <attr name="radar_radius" format="dimension" />
        <!-- 雷达主体线条颜色 -->
        <attr name="radar_borderColor" format="color" />
        <!-- 雷达主体线条粗细 -->
        <attr name="radar_border" format="dimension" />
        <!-- 雷达同心圆个数 -->
        <attr name="radar_circleCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="CompassDialView">
        <!-- 指南针表盘半径 -->
        <attr name="cps_radius" format="dimension" />
        <!-- 指南针表盘中心文字大小 -->
        <attr name="cps_degree_textSize" format="dimension" />
        <!-- 指南针表盘外环文字大小 -->
        <attr name="cps_outer_textSize" format="dimension" />
        <!-- 指南针表盘内环文字大小 -->
        <attr name="cps_inner_textSize" format="dimension" />
        <!-- 别的属性，如颜色等自行添加，然后在CompassDialView实现即可 -->
    </declare-styleable>
</resources>