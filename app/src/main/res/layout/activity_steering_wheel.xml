<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#292A49">

        <com.pengxh.kt.lite.widget.SteeringWheelController
            android:id="@+id/steeringWheelController"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/lib_dp_3"
            app:controller_backgroundColor="#1F1F37"
            app:controller_borderColor="#776CA6"
            app:controller_borderStroke="6"
            app:controller_outerCircleDiameter="200" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F7F7F7">

        <com.example.mutidemo.widget.SteeringWheelView
            android:id="@+id/steeringWheelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/lib_dp_3"
            app:ctrl_borderColor="#64BFEB"
            app:ctrl_borderStroke="5dp"
            app:ctrl_diameter="200dp"
            app:ctrl_directionColor="#2A68BF"
            app:ctrl_directionDiameter="15dp"
            app:ctrl_switchColor="@color/white" />
    </RelativeLayout>
</LinearLayout>
