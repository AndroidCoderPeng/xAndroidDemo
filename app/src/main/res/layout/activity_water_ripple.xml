<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.mutidemo.widget.WaterRippleView
        android:id="@+id/waterRippleView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:ripple_animDuration="35"
        app:ripple_centerColor="@color/main_colcor_blue"
        app:ripple_distance="3dp"
        app:ripple_image="@mipmap/hujiao"
        app:ripple_maxDistance="30dp"
        app:ripple_radius="50dp"
        app:ripple_spreadColor="@color/main_colcor_blue"
        app:ripple_text="正在呼叫"
        app:ripple_textColor="@color/white"
        app:ripple_textSize="16sp" />

</RelativeLayout>