<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mMVP_TextView_cityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="北京"
            android:textColor="#fff"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mMVP_ImageView_getLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            android:background="@mipmap/loading" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/mMVP_TextView_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="27"
            android:textColor="#fff"
            android:textSize="80sp" />

        <TextView
            android:id="@+id/mMVP_TextView_weather_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/mMVP_TextView_temp"
            android:text="晴"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#80ffffff"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/mMVP_TextView_winddirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="西北风"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/mMVP_TextView_windpower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="4级"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/mMVP_TextView_humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="湿度 14%"
            android:textColor="#fff" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#80ffffff"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/mMVP_TextView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="今天"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mMVP_TextView_weather_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="晴"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mMVP_TextView_templow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mMVP_TextView_"
            android:layout_marginTop="5dp"
            android:text="14~"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/mMVP_TextView_temphigh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mMVP_TextView_"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/mMVP_TextView_templow"
            android:text="31"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>