<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/bg_stroke_layout_blue"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_solid_text_blue_radius_top_5"
        android:padding="5dp"
        android:text="当前选定点位置"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/locationView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/lib_dp_5"
        android:paddingVertical="@dimen/lib_dp_3"
        android:textColor="@color/mainColor"
        android:textSize="12sp" />
</LinearLayout>